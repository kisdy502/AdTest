<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20px"
    tools:context="cn.fm.adtest.MainActivity">


    <Button
        android:id="@+id/test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30px"
        android:background="@drawable/normal_button_bg"
        android:padding="12px"
        android:text="test1"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30px"
        android:background="@drawable/normal_button_bg"
        android:padding="12px"
        android:text="test2"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/test1" />


    <Button
        android:id="@+id/test3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30px"
        android:background="@drawable/normal_button_bg"
        android:padding="12px"
        android:text="test3"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/test1" />

    <Button
        android:id="@+id/test4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30px"
        android:background="@drawable/normal_button_bg"
        android:padding="12px"
        android:text="test4"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/test3"
        app:layout_constraintTop_toBottomOf="@id/test2" />

    <Button
        android:id="@+id/test5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30px"
        android:background="@drawable/normal_button_bg"
        android:padding="12px"
        android:text="test5"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/test3" />

    <Button
        android:id="@+id/test6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30px"
        android:background="@drawable/normal_button_bg"
        android:padding="12px"
        android:text="test6"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/test5"
        app:layout_constraintTop_toBottomOf="@id/test4" />

    <EditText
        android:id="@+id/loginfo"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="12px"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
